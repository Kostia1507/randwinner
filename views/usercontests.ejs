<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" type="text/css" href="../assets/homeStyle.css"/>
    <title>RandWinner</title>
</head>
<body>
<div>
    <h2 class="text">Ваші конкурси:</h2>
    <% contests.forEach((item) => { %>
        <div class="contest">
            <%
                const dateFinished = item.finished.toLocaleDateString();
                const timeFinished = item.finished.toLocaleTimeString();
                const dateTimeFinished = `${dateFinished} ${timeFinished}`;
            %>
            <h5 class="text">Кінець: <%=dateTimeFinished%></h5>
            <h4 class="text"><%= item.description%></h4>
            <button class="contest-button" data-mydata="<%= item.id%>"
                    onclick="redirectTo('/contest')">Переглянути детальніше</button>
        </div>
    <% })%>
</div>
</body>
</html>
<script>
    function redirectTo(path) {
        window.location.href = path+"/"+event.target.getAttribute('data-mydata');
    }
</script>